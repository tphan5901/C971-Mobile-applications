<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.addTerm"
             Title="Add Term">
    <VerticalStackLayout>
        <Label Text="Term name"/>
        <Entry x:Name="name" Placeholder=""/>
        
        <Label Text="Start date"/>
            <DatePicker x:Name="startDate" />
        
        <Label Text="End date"/>
            <DatePicker x:Name="endDate" />

        <Button Text="Save" Clicked="SaveButton_Clicked"  Margin="0,430,0,0" TextColor ="#fff" VerticalOptions="EndAndExpand" BackgroundColor="DarkOrange"/>
        <Button Text="Cancel" Clicked="ExitButton_Clicked"  Margin="0,0,0,0" TextColor="#fff" BackgroundColor="HotPink"/>


    </VerticalStackLayout>
</ContentPage>