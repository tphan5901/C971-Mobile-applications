<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.termInfo"
             Title="Term Info">
    <ScrollView>
        <VerticalStackLayout>
    

            <Label Text="Term name"/>
            <Entry x:Name="name" Placeholder="" TextColor="Black" IsEnabled="False" Text="{Binding Title}"/>
            <Label Text="Start date"/>
            <DatePicker x:Name="startDate" TextColor="Black" IsEnabled="False" Date="{Binding StartDate}" />
            <Label Text="End date"/>
        <DatePicker x:Name="endDate" TextColor="Black" IsEnabled="False" Date="{Binding EndDate}" />


        <Button Text="Add Courses" Clicked="addCourses"/>
     
            <VerticalStackLayout x:Name="courseStack" Spacing="15" Padding="20">
                <!-- Course added here -->
            </VerticalStackLayout>

    </VerticalStackLayout>
 </ScrollView>
</ContentPage>